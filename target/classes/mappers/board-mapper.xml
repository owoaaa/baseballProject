	<select id="selectFreeBoardList" resultType="Board">
	    SELECT BOARD_NO, BOARD_TITLE, MEMBER_NO, CREATE_DATE, READ_COUNT, LIKE_COUNT
	    FROM BOARD
	    WHERE BOARD_TYPE = '자유'
	    ORDER BY BOARD_NO DESC
